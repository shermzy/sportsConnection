<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="false" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>pLogin</servlet-name>
        <servlet-class>process.processLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>processLogout</servlet-name>
        <servlet-class>process.processLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pLogin</servlet-name>
        <url-pattern>/processLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>processLogout</servlet-name>
        <url-pattern>/processLogout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <init-param>
        <param-name>greeting</param-name>
        <param-value>Welcome</param-value>
    </init-param>
</web-app>
